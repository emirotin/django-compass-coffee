!!! strict

%head
  %title {% block pagetitle %}{% endblock %}
  
  %meta(http-equiv="Content-Type" content="text/html;charset=UTF-8")
  
  %link(href="/site_media/css/screen.css" rel="stylesheet" type="text/css" media="screen, projection")
  %link(href="/site_media/css/print.css" rel="stylesheet" type="text/css" media="print")
  /[if lte IE 8}]
    %link(href="/site_media/css/ie.css" rel="stylesheet" type="text/css" media="screen, projection")
    
  {% block extracss %}{% endblock %}
    
%body
  #container
  
    #header
      {% block header %}{% endblock %}  

    #sidebar
      {% block sidebar %}{% endblock %}  
    
    #content
      %h2 {% block contenttitle %}{% endblock %}
      {% block content %}{% endblock %}
      
       
    #footer
      %p &copy; Eugene Mirotin

  /JS files
  %script(type="text/javascript" src="/site_media/js/jquery-1.4.4.js")
  %script(type="text/javascript" src="/site_media/js/haml.js")
  {% block extrajs %}{% endblock %}
